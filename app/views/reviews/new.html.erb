<h1>Add a new review for <%= @restaurant.name %></h1>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATES %>
  <%= link_to "Cancel", restaurant_path(@restaurant), {:class=>"btn btn-secondary"} %>
  <%= f.submit "Post your review", class: "btn btn-success" %>
<% end %>

