<h2>
  <%= @restaurant.name %>
  <span class="badge badge-pill badge-success">
    <%= @restaurant.category.upcase %>
  </span>
</h2>

<p>Address: <%= @restaurant.address %> </p>
<p>Phone: <%= @restaurant.phone_number %></p>

<div class="container">
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %>/5 <%= review.content %></li>
    <% end %>
  </ul>
</div>

<%= link_to "Back to list", restaurants_path, {:class=>"btn btn-secondary"} %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), {:class=>"btn btn-primary"} %>
